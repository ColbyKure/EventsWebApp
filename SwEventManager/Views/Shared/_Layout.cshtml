<!DOCTYPE html>

<html>

@*<head style="background-color: #00FFFF">*@
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
@*<body style="background-color: #2F4F4F">*@
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Events App", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Event Manager", "Index", "AdminEvents")</li>
                    <li>@Html.ActionLink("User Manager", "Index", "AdminUsers")</li>
                    <li>@Html.ActionLink("Events", "Index", "UserEvents")</li>
                    <li>@Html.ActionLink("All orders", "Index", "Orders")</li>
                    <li>@Html.ActionLink("Logout", "Logout", "Users")</li>
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <footer>
            <p>TEAM#2 Events App</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

<style>
    body {
        background-color: #d4e8ff;
        color: black;
    }
    head {
        background-color: slategray;
        color: whitesmoke;
    }
    label { color: midnightblue }
    .EventDisplay {
        margin: 5px,5px,5px,5px;
        border-radius: 25px;
        float: left;
        clear:right;
        border: 2px solid #0094ff;
        padding: 20px;
        width: 330px;
        height: 380px;
    }
    img {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
    .DisplayEvent {
        border-radius: 25px;
        float:left;
        clear:right;
        border: 2px solid #0094ff;
        padding: 20px;
        width: 500px;
        height: 100px;
    }
    .links{
        float:left;
        clear:both;
    }
    .boxed { border: 10px white; }
    .new-user{ color: #5977ac }
    thead {
        color: black
    }
    table, td, th {
        border: 2px solid;
    }
    th {
        background-color: #58d1ce
    }
    hr {
        border: 1px solid;
        color: #0f3d45
    }
    tr:hover {
        background-color: #a5ede9;
    }
</style>
