@model SwEventManager.Models.Event

@{
    ViewBag.Title = "Delete Event";
}

<h2>Delete Event</h2>

<p style="font-size:18px">Are you sure you want to delete this Event?</p>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>Event Name</dt>
        <dd>@Html.DisplayFor(model => model.EventName)</dd>
        <dt>Event Description</dt>
        <dd>@Html.DisplayFor(model => model.EventDescription)</dd>
        <dt>Event Category</dt>
        <dd>@Html.DisplayFor(model => model.EventCategory)</dd>
        <dt>Start Date</dt>
        <dd>@Html.DisplayFor(model => model.StartDate)</dd>
        <dt>End Date</dt>
        <dd>@Html.DisplayFor(model => model.EndDate)</dd>
        <dt>Start Time</dt>
        <dd>@Html.DisplayFor(model => model.StartTime)</dd>
        <dt>End Time</dt>
        <dd>@Html.DisplayFor(model => model.EndTime)</dd>
        <dt>Location</dt>
        <dd>@Html.DisplayFor(model => model.Location)</dd>
        <dt>Open For Registration</dt>
        <dd>@Html.DisplayFor(model => model.OpenForRegistration)</dd>
        <dt>Image Path</dt>
        <dd>@Html.DisplayFor(model => model.imagePath)</dd>
        <dt>Adult Price</dt>
        <dd>@Html.DisplayFor(model => model.AdultPrice)</dd>
        <dt>Child Price</dt>
        <dd>@Html.DisplayFor(model => model.ChildPrice)</dd>
        <dt>Company Name</dt>
        <dd>@Html.DisplayFor(model => model.CompanyName)</dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-default" /> |
            @Html.ActionLink("Cancel", "Index")
        </div>
    }
</div>
